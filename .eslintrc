{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "mongo": true,
    "meteor": true
  },

  "extends": [
    "airbnb",
    "@meteorjs/eslint-config-meteor"
  ],

  "globals": {},

  "rules": {
    "no-underscore-dangle": 0,
    "new-cap": 0
  }
}